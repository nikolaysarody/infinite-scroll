{
    "compilerOptions": {
        "jsx": "react-jsx",
        "target": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext",
            "ES5"
        ],
        "module": "ESNext",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "useDefineForClassFields": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node",
        "isolatedModules": true,
        "noEmit": true,
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "baseUrl": "."
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": [
        "src/**/*",
    ]
}
